{
  "name": "p-oauth",
  "version": "1.0.0",
  "description": "OAuth2 client web component",
  "main": "dist/p-oauth.js",
  "scripts": {
    "develop:js": "esbuild src/components/p-oauth.ts --bundle --watch --outfile=dist/p-oauth.js",
    "develop:sw": "esbuild src/service-worker/service-worker.ts --bundle --watch --outfile=dist/p-oauth-sw.js",
    "develop": "concurrently \"npm:develop:js\" \"npm:develop:sw\" \"npm:serve\"",
    "build:js": "esbuild src/components/p-oauth.ts --bundle --minify --outfile=dist/p-oauth.js",
    "build": "concurrently \"npm:build:js\" \"npm:build:sw\"",
    "build:sw": "esbuild src/service-worker/service-worker.ts --bundle --minify --outfile=dist/p-oauth-sw.js",
    "serve": "concurrently \"cross-env NODE_TLS_REJECT_UNAUTHORIZED='0' node scripts/remoteserver.js\" \"node scripts/server.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Peter Huisman",
  "license": "UNLICENSED",
  "devDependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dexie": "^3.2.5",
    "esbuild": "^0.20.0",
    "express": "^4.18.2",
    "serve-index": "^1.9.1"
  }
}
